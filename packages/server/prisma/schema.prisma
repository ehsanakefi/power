// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  phone     String    @unique
  role      String    @default("CLIENT")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  tickets   Ticket[]

  @@map("users")
}

model Ticket {
  id          Int       @id @default(autoincrement())
  title       String
  content     String
  status      String    @default("unseen")
  authorId    Int
  author      User      @relation(fields: [authorId], references: [id])
  history     Log[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("tickets")
}

model Log {
  id        Int       @id @default(autoincrement())
  ticketId  Int
  ticket    Ticket    @relation(fields: [ticketId], references: [id])
  before    String    // وضعیت قبلی
  after     String    // وضعیت جدید
  changes   String    // تغییرات اعمال شده
  user      String    // کاربری که تغییر را ایجاد کرده
  createdAt DateTime  @default(now())

  @@map("logs")
}

// UserRole enum values: CLIENT, EMPLOYEE, MANAGER, ADMIN
// Using String type instead of enum for SQLite compatibility
